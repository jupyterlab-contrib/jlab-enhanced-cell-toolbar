{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Cell Toolbar",
  "description": "Cell Toolbar Settings.",
  "jupyter.lab.transform": true,
  "properties": {
    "defaultTags": {
      "title": "List of Default Tags",
      "description": "List of tags to always display for quick selection.",
      "default": ["parameters"],
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[\\w-]+$"
      }
    },
    "floatPosition": {
      "title": "Floating cell toolbar position",
      "description": "Place the cell toolbar above the cell. If set, `leftSpace` is ignored.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/position"
        }
      ],
      "default": null
    },
    "helperButtons": {
      "title": "Helper buttons",
      "description": "Set the list of visible helper buttons.",
      "default": [
        "insert-cell-below",
        "move-cell-down",
        "move-cell-up",
        "run-cell-and-select-next"
      ],
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "insert-cell-below",
              "move-cell-down",
              "move-cell-up",
              "run-cell-and-select-next"
            ]
          },
          "uniqueItems": true
        }
      ]
    },
    "toolbar": {
      "title": "List of toolbar items",
      "description": "An item is defined by a unique `name`. If its `type` is `command` (default), the `command` id is required; and optionally a `icon`, a `label` and the `cellType` on which it applies. You can disabled an default item by setting `disabled` to `true`.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/toolbarItem"
          }
        }
      ],
      "default": [
        {
          "name": "markdown-to-code",
          "cellType": "markdown",
          "command": "notebook:change-cell-to-code",
          "icon": "@jlab-enhanced/cell-toolbar:code"
        },
        {
          "name": "code-to-markdown",
          "cellType": "code",
          "command": "notebook:change-cell-to-markdown",
          "icon": "ui-components:markdown"
        },
        {
          "name": "delete-cell",
          "command": "notebook:delete-cell",
          "icon": "@jlab-enhanced/cell-toolbar:delete"
        },
        {
          "name": "spacer",
          "type": "spacer"
        }
      ]
    },
    "leftSpace": {
      "title": "Cell toolbar empty left space size",
      "description": "Size of the empty space left of the cell toolbar in px. Ignored if `floatPosition` is not null.",
      "type": "number",
      "minimum": 0,
      "default": 0
    }
  },
  "additionalProperties": false,
  "type": "object",
  "definitions": {
    "toolbarItem": {
      "properties": {
        "name": {
          "title": "Unique name",
          "type": "string"
        },
        "args": {
          "title": "Command arguments",
          "type": "object"
        },
        "cellType": {
          "title": "Cell type on which to display the item",
          "description": "Left empty to define on all cells",
          "type": "string",
          "enum": ["code", "markdown", "raw"]
        },
        "command": {
          "title": "Command id",
          "type": "string",
          "default": ""
        },
        "disabled": {
          "title": "Whether the item is ignored or not",
          "type": "boolean",
          "default": false
        },
        "icon": {
          "title": "Item icon id",
          "description": "If defined, it will override the command icon",
          "type": "string"
        },
        "label": {
          "title": "Item label",
          "description": "If defined, it will override the command label",
          "type": "string"
        },
        "type": {
          "title": "Item type",
          "type": "string",
          "enum": ["command", "spacer"]
        },
        "rank": {
          "title": "Item rank",
          "type": "number",
          "minimum": 0,
          "default": 50
        }
      },
      "required": ["name"],
      "additionalProperties": false,
      "type": "object"
    },
    "position": {
      "properties": {
        "right": {
          "title": "Right distance in pixels",
          "type": "number",
          "minimum": 0,
          "default": 0
        },
        "top": {
          "title": "Top distance in pixels",
          "type": "number",
          "minimum": 0,
          "default": 0
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}
